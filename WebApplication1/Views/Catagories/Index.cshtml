@model IEnumerable<WebApplication1.Models.Catagory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Catagory_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Catagory_image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Catagory_disc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Catagory_name)
        </td>
        <td>
            <img src="@item.Catagory_image" width="60px" height="30px"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Catagory_disc)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Catagory_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Catagory_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Catagory_id })
        </td>
    </tr>
}

</table>
